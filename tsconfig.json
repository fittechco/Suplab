{
  "include": [
    "./**/*.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "@shopify/oxygen-workers-types",
      "node"
    ],
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "noEmit": true
  }
}